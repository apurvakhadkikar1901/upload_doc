
<div class="wrapper fadeInDown">
  <centre><img src ="Education.png" width="200" height="190"></centre>  
  <div id="formContent">
    <!-- Tabs Titles -->
    <h1 class="active" style="font-family:Bodoni MT Black; font-size:50px;">
      Upload Douments</h1>
      <!-- Icon -->
    <div class="fadeIn first">
      <img src="logo2.png" id="icon" alt="User Icon" width="80" height="80"/>
    </div>
    <br>
    <br>
    <form id="upload-form" action="/upload" method="POST" enctype="multipart/form-data">
    <div><h3 style="font-size:20px;"><label for="userid" >Email Id</label></h3>
      <input type="text" id="uid" name="userid" class="fadeIn second" value={{userid}} ><br><br>
      
      <h3 style="font-size:20px;"><label for="subject">Subject</label></h3>
      <input type="text" id="subject" name="subject" class="fadeIn second"><br><br>

      <h3 style="font-size:20px;"><label for="class">Standard</label></h3>
      <input type="text" id="class" name="class" class="fadeIn second"><br><br>

      <h3 style="font-size:20px;"><label for="orgname">Organization Name</label><br><br></h3>
      <input type="text" id="orgid" name="Orgname" class="fadeIn second" value={{orgname}} ><br><br>
      
      <h3 style="font-size:20px;">Select an Document to upload:</h3>
      <center>
      <select id="filetype" name="Type"><br>
        <option value="Document">Document</option></div>
      </select>
      <br>
      <br>
      <div class="upload-container"><input id="file-picker" type="file" name="file"></div>
      
      <div><input type="submit" value="Upload Document" class="fadeIn fourth"></div>
      </center>
    </form>
  </div>


<script>
  document.addEventListener('DOMContentLoaded', () => {

    const message = document.getElementById('message');
    const picker = document.getElementById('file-picker');

    document.getElementById('upload-form').addEventListener('submit', (e) => {

      message.innerText = '';

      if(!picker.files.length) {
        message.innerText = 'Please select an Pdf to upload.';
        e.preventDefault();
        return false;
      }
    });

  });
</script>